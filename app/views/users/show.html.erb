<% if current_user.jobs.count > 1 %>
<ul>
  <% current_user.jobs.each do |job| %>
    <li><%= job.name %></li>
  <% end %>
</ul>
<% else %>
  <p>No jobs yet</p>
<% end %>

<div class="card card-body">
  <%= form_for [current_user, @job] do |f| %>
    <div class="form-group row">
      <%= f.label :name, :class => "col-1 col-form-label" %>
      <%= f.text_field :name, :class => "form-control col-5" %>
    </div>
    <p><%= f.submit :class => "btn btn-success" %></p>
  <% end %>
</div>
